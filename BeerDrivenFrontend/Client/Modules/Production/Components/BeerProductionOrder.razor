@inherits BeerProductionOrderBase
@using MudBlazor

<EditForm Model="@Order" OnValidSubmit="OnOrderBeer">
	<DataAnnotationsValidator/>
	<MudGrid>
		<MudItem xs="12" sm="12">
			<MudCard>
				<MudCardContent>
					<MudTextField Label="BeerType" Class="mt-3"
					              @bind-Value="Order.BeerType" For="@(() => Order.BeerType)"/>
					<MudTextField Label="Order #"
								  @bind-Value="Order.BatchNumber" For="@(() => Order.BatchNumber)" />
					<MudNumericField Label="Quantity" Class="mt-3"
								  @bind-Value="Order.Quantity" For="@(() => Order.Quantity)" />
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnOrderBeer">Confirm</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
	</MudGrid>
</EditForm>