@inherits ProductionGridBase
@using MudBlazor
@using BeerDrivenFrontend.Modules.Production.Extensions.Dtos

<MudTable Items="@ProductionOrders" Hover="true" @ref="MudTable" Striped="true" RowClassFunc="@SelectedRowClassFunc" OnRowClick="RowClickEvent" T="ProductionOrderJson">
	<HeaderContent>
		<MudTh>Order Number</MudTh>
		<MudTh>Beer Type</MudTh>
		<MudTh>Quantity To Produce</MudTh>
		<MudTh>Quantity Produced</MudTh>
		<MudTh>Status</MudTh>
	</HeaderContent>
	<RowTemplate>
		<MudTd DataLabel="#">@context.BatchNumber</MudTd>
		<MudTd DataLabel="Type">@context.BeerType</MudTd>
		<MudTd DataLabel="To Produce">@context.QuantityToProduce</MudTd>
		<MudTd DataLabel="Produced">@context.QuantityProduced</MudTd>
		<MudTd DataLabel="Status">@context.Status</MudTd>
	</RowTemplate>
</MudTable>