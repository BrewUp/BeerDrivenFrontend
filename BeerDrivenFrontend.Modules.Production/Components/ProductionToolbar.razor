@inherits ProductionToolbarBase
@using MudBlazor

<MudPaper Elevation="25">
	<MudToolBar>
		<MudTooltip Text="Add a New Order">
			<MudIconButton Icon="@Icons.Material.Outlined.Add" OnClick="OnStartOrderBeer"/>
		</MudTooltip>
		<MudTooltip Text="Close Current Order">
			<MudIconButton Icon="@Icons.Material.Outlined.AddTask" OnClick="OnCompleteOrderBeer"/>
		</MudTooltip>
	</MudToolBar>
</MudPaper>