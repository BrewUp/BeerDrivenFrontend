@inherits BeerProductionOrderBase
@using BeerDrivenFrontend.Modules.Production.Extensions.Dtos
@using MudBlazor

<EditForm Model="@Order" OnValidSubmit="OnValidSubmit">
	<DataAnnotationsValidator/>
	<MudGrid>
		<MudItem xs="12" sm="12">
			<MudCard>
				<MudCardContent>
					<MudSelect T="BeerLookupJson" Label="Beer" HelperText="Select your favorite beer" @bind-Value="CurrentBeer">
						@foreach (var beer in Beers)
						{
							<MudSelectItem Value="@(beer)">@beer.BeerType</MudSelectItem>
						}
					</MudSelect>
					<MudTextField Label="Order #"
								  @bind-Value="Order.BatchNumber" For="@(() => Order.BatchNumber)" />
					<MudNumericField Label="Quantity" Class="mt-3"
								  @bind-Value="Order.Quantity" For="@(() => Order.Quantity)" />
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnOrderBeer">Confirm</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
	</MudGrid>
</EditForm>