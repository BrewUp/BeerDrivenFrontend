@inherits ProductionBase
@page "/production"

@using MudBlazor
@using BeerDrivenFrontend.Modules.Production.Components

<PageTitle>Production</PageTitle>

<ProductionToolbar></ProductionToolbar>
<hr/>
<MudAlert>@Message</MudAlert>

<ProductionGrid ProductionOrders="@ProductionOrders"></ProductionGrid>

<MudDialog @bind-IsVisible="ShowOrder">
	<TitleContent>
		<MudText Typo="Typo.h6">
			<MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3"/> Launch Beer Order
		</MudText>
	</TitleContent>
	<DialogContent>
		<BeerProductionOrder Order="@CurrentOrder"/>
	</DialogContent>
</MudDialog>